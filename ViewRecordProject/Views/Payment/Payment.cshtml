@model ViewRecordProject.Models.Payment
<div class="container">

    <form asp-action="PaymentForm" asp-controller="Payment" method="post">
        <div class="form-group">
            <label asp-for="c_name">Class Name</label>
            <input asp-for="c_name" placeholder="Student Class goes here" /><br />
        </div>
        <div class="form-group">
            <label asp-for="roll">Roll Number</label>
            <input asp-for="roll" placeholder="Student Roll goes here" /><br />
        </div>
        <div class="form-group">

            <label asp-for="fee">Monthly Fee</label>
            <input asp-for="fee" placeholder="Student Fee goes here" /><br />
        </div>
        <div class="form-group">

            <label asp-for="date_of_payment">payment date</label>
            <input asp-for="date_of_payment" placeholder="Student Date of payment goes here" /><br />
        </div>
        


        <input type="submit" />
    </form>
</div>


